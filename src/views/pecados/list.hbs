<div class="mhead1 mx-auto">
    <div class="row">
    <div class="col-sm-9">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">Listado de pecados</h5>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Piso</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>                
                {{#each pecados}}
                <tr>
                    <th>{{NombrePecado}}</th>
                    <td>{{Descripcion}}</td>
                    <td>{{NombrePiso}}</td>
                    <td>
                        <a href="/pecados/edit/{{idPecado}}" class="btn btn-outline-info">Editar</a>
                        <a href="/pecados/delete/{{idPecado}}" class="btn btn-outline-info">Eliminar</a>
                    </td>  

                </tr>
                {{else}}
                    <p>No hay pecados registradas</p>                
                {{/each}}
                </tbody>

            </table>
        </div>
        </div>
    </div>
    <div class="col-sm-3">
            <div class="card">
        <img src="/img/giratina.jpg" class="card-img-top" alt="hola">
        <div class="card-body">
        <h5 class="card-title">Agregar un nuevo pecado</h5>
        <a href="/pecados/add" class="btn btn-secondary btn-block">Agregar</a>
    </div>
    </div>
    </div>
</div>