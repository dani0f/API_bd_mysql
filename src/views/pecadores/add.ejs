<div class="container pb-3 pt-2">
<div class="card mx-auto" style="width: 25rem;">
    <div class="card-body">
      <h5 class="card-title text-danger">Agregar pecador</h5>
      <form action="/pecadores/add" method="POST">
        <div class="form">
        <div class="form-row">
            <div class="form-group col-md-6 my-auto">
                <p>Nombre<input type="text" class="form-control" name="Nombre" placeholder=""></p>            
            </div>
            <div class="form-group col-md-2 my-auto">
                <p>Edad<input type="int" class="form-control" name="Edad" placeholder=""></p>
            </div>
        </div>
        <div class="form-group my-auto">
            <p>Fecha de nacimiento<input type="date" class="form-control" name="Fecha_de_nacimiento" placeholder=""></p>
        </div>
        <div class="form-group my-auto">
            <p>Fecha de muerte<input type="date" class="form-control" name="Fecha_de_muerte" placeholder=""></p>
        </div>
        <label>Muerte</label>
        <select class="form-control form-control-mr-sm-2" name="Muertes_idMuerte">
                <% for(var i=0; i<elementos.length ; i++) {%>
                   <% if(elementos[i].NombreTabla=="muertes"){ %>
                       <h1><%= elementos[i].Nombre %></h1>
                           <option value=<%=elementos[i].id%>><%= elementos[i].Nombre %></option>                        
                     <% } %>
                   <% } %>
            </select>
            <label >Pecado</label>
            <select class="form-control form-control-mr-sm-2" name="Pecados_idPecado">
                <% for(var i=0; i<elementos.length ; i++) {%>
                    <% if(elementos[i].NombreTabla=="pecados"){ %>
                        <h1><%= elementos[i].Nombre %></h1>
                            <option value= <%=elementos[i].id%>><%= elementos[i].Nombre %></option>                   
                        <% } %>
                    <% } %>
             </select>
             <label >Paises</label>
             <select class="form-control form-control-mr-sm-2" name="Paises_idPais">    
                <% for(var i=0; i<elementos.length ; i++) {%>
                    <% if(elementos[i].NombreTabla=="paises"){ %>
                        <h1><%= elementos[i].Nombre %></h1>
                      <option value=<%=elementos[i].id%>><%= elementos[i].Nombre %></option>                                       
                        <% } %>
                    <% } %>
            </select>
            <div class="form-group">
            <p>Biografia<textarea class="form-control" name="Biografia" rows="2"></textarea></p>
        </div>
        <button class="btn btn-secondary btn-block">
            agregar
        </button>
    </div>
    </form>
    </div>
  </div>
</div>
