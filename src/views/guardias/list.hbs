<div class="mhead1 mx-auto">
    <div class="row">
    <div class="col-sm-9">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">Listado de guardias</h5>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Piso</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>                
                {{#each guardias}}
                <tr>
                    <th>{{Nombre}}</th>
                    <td>{{Pisos_idPiso}}</td> 
                    <td>
                        <a href="/guardias/edit/{{idGuardia}}" class="btn btn-outline-info">Editar</a>
                        <a href="/guardias/delete/{{idGuardia}}" class="btn btn-outline-info">Eliminar</a>
                    </td>  

                </tr>
                {{else}}
                    <p>No hay Guardias registrados</p>                
                {{/each}}
                </tbody>

            </table>
        </div>
        </div>
    </div>
    <div class="col-sm-3">
            <div class="card">
        <img src="/img/Groudon.png" class="card-img-top" alt="hola">
        <div class="card-body">
        <h5 class="card-title">Agregar nuevo guardia</h5>
        <a href="/guardias/add" class="btn btn-secondary btn-block">Agregar</a>
    </div>
    </div>
    </div>
</div>