<div class="mhead1 mx-auto">
    <div class="row">
    <div class="col-sm-9">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">Herramientas asignados</h5>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Castigo</th>
                    <th scope="col">Herramienta</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>                
                {{#each castigos_herramientas}}
                <tr>
