<div class="mhead1 mx-auto">
    <div class="row">
    <div class="col-sm-9">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">Listado de demonios</h5>
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Castigo</th>
                    <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>                
                {{#each demonios}}
                <tr>
                    <th>{{Nombre}}</th>
                    <td>{{Castigos_idCastigo}}</td> 
                    <td>
                        <a href="/demonios/edit/{{idDemonio}}" class="btn btn-outline-info">Editar</a>
                        <a href="/demonios/delete/{{idDemonio}}" class="btn btn-outline-info">Eliminar</a>
                    </td>  

                </tr>
                {{else}}
                    <p>No hay Demonios registrados</p>                
                {{/each}}
                </tbody>

            </table>
        </div>
        </div>
    </div>
    <div class="col-sm-3">
            <div class="card">
        <img src="/img/teemo.gif" class="card-img-top" alt="hola">
        <div class="card-body">
        <h5 class="card-title">Agregar nuevo demonio</h5>
        <a href="/demonios/add" class="btn btn-secondary btn-block">Agregar</a>
    </div>
    </div>
    </div>
</div>